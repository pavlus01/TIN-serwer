
        <script type="application/javascript" src="/js/validationWypozyczenieForm.js"></script>

<%- include('../fragments/header.ejs') %>
        <main>
            <h2>Nowe wypożyczenie</h2>
            
            <form class="form" novalidate onsubmit="return validateForm();">
                <label for="klient">Klient: <span class="symbol-required">*</span></label>
                <select name="klient" id="klient" class="error-input" required>
                    <option value="" selected>-- Wybierz klienta --</option>
                    <option value="1">Jan Kowalski</option>
                    <option value="2">Łukasz Adamski</option>
                    <option value="3">Krzysztof Protasiewicz</option>
                </select>
                <span id="errorKlient" class="errors-text">Pole jest wymagane</span>

                <label for="auto">Auto: <span class="symbol-required">*</span></label>
                <select name="auto" id="auto" class="error-input" required>
                    <option value="" selected>-- Wybierz auto --</option>
                    <option value="1">Aston Martin DB11</option>
                    <option value="2">BMW i8</option>
                    <option value="3">Skoda Superb</option>
                </select>
                <span id="errorAuto" class="errors-text">Pole jest wymagane</span>

                <label for="data_wypozyczenia">Data wypożyczenia: <span class="symbol-required">*</span></label>
                <input type="date" name="data_wypozyczenia" class="error-input" id="data_wypozyczenia" placeholder="YYYY-MM-DD"/>
                <span id="errorData_wypozyczenia" class="errors-text">Pole jest wymagane</span>

                <label for="data_zwrotu">Data zwrotu: </label>
                <input type="date" name="data_zwrotu" id="data_zwrotu" placeholder="YYYY-MM-DD"/>
                <span id="errorData_zwrotu" class="errors-text"></span>

                <div class="form-buttons">
                    <p id="errorSummary" class="errors-text">Formularz zawiera błędy</p>
                    <input type="submit" class="form-button-submit"  value="Dodaj" />
                    <a href="/Wypozyczenie/" class="form-button-cancel"><i>Anuluj</i></a>
                </div>
            </form>
        </main>
        <%- include('../fragments/footer.ejs') %>